{% extends 'front/base.html.twig' %}

{% block title %}New Client{% endblock %}
{% block stylesheets %}
{{parent()}}
<style>
.div-page-register {
   padding-top: 3%;
}
.row-register-client .col-lg-6{
   padding: 10px;
}

</style>
{% endblock %}
   
{% block body %}
  

     <!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Mon compte</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">Modifier profil</li>
    </ol>
</div>

<div class="container div-page-register" style="width:75%;">
    <div class="col-lg-12">
        <div class="row row-register-client justify-content-center">
            <form action="{{ path('update_profile') }}" method="POST" autocomplete="off">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-6">
                <label for="inputFirstName">First Name</label>
                <input type="text" class="form-control" id="inputFirstName" placeholder="First Name" name="firstName" required value={{ client.firstName}}>
            </div>
            <div class="col-lg-6">
                <label for="inputLastName">Last Name</label>
                <input type="text" class="form-control" id="inputLastName" placeholder="Last Name" name="lastName" required value="{{ client.lastName}}">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <label for="inputPhone">Phone</label>
                <input type="text" class="form-control" id="inputPhone" placeholder="Phone" name="phone" required value="{{ client.phone}}">
            </div>
        
            <div class="col-lg-6">
                <label for="exampleFormControlTextarea1">Address</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="1" name="address" required>{{ client.address}}</textarea>
            </div>
        </div>
       
       
    </div>
    <button type="submit" class="btn btn-primary mt-2" name="submit_button">Update</button>
</form>

        </div>
    </div>  
</div>

{% endblock %}
